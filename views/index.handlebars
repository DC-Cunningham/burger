<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-2">Eat the burger!</h1>
        <p class="lead text-center">Enter a Burger you want to eat and hit the add burger button.</p>
    </div>
</div>

<div class="row">
    <div class="col-2">
        <img src="../public/assets/images/big-hamburger.jpg"> </div>
    <div class="col-10">
        <div class="row">
            <div class="col text-center">
                <h2>Burgers to devour</h2>

                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col text-center">
                <h2>Burgers that have been devoured!</h2>

                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <h2>Add a Burger</h2>
                <form class="create-form">
                    <div class="form-group">
                        <label for="burger">Burger:</label>
                        <input type="text" id="burger" name="name">
                    </div>
                    <button class="btn btn-outline-warning" type="submit">Add burger</button>
                </form>
            </div>
        </div>
    </div>
</div>